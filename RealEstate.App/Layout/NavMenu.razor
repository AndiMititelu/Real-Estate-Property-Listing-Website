@using RealEstate.App.Contracts
@inject ITokenService tokenService
@inject IAuthenticationService authService




<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">RealEstate.App</a>
         <button title="Navigation menu" class="navbar-toggler"  >
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" >
    <nav class="flex-column">
        <CascadingAuthenticationState>

                    
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="propertyoverview">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Properties
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="addproperty">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add Property
                </NavLink>
            </div>

            @* 
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/findproperty">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Property by ID
                </NavLink>
            </div> *@
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/myproperties">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Properties
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/listingoverview">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Listings
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/addlisting">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add listing
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/updatelisting">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Update Listing
                </NavLink>
            </div>

            @if (role == "User")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/updateuser">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My account
                    </NavLink>
                </div>
            }

            @if (role == "Admin")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/updateuser">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Update User
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/deleteuser">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Delete User
                    </NavLink>
                </div>
            }

        </CascadingAuthenticationState>
    </nav>
</div>


@code {
    private bool collapseNavMenu = false;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    [Inject]
    public NavigationManager NavigationManager { get; set; }

    public string role { get; set; } = string.Empty;


    protected override async Task OnInitializedAsync()
    {
        role = await tokenService.GetRoleFromTokenAsync();
        Console.WriteLine("ROL CURENT: ", role);
    }
    private void NavigateToDeleteUser()
    {
        NavigationManager.NavigateTo("/admin/deleteuser");
    }
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}